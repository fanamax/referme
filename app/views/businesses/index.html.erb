<h1>Listing businesses</h1>

<table border="1px">
  <tr>
    <th>Name</th>
    <th>Referal Program</th>
    <th>Address</th>
    <th>Description</th>
    <th>City</th>
    <th>State</th>
    <th>Url</th>
    <th>Referer Reward</th>
    <th>Referee Reward</th>
    <th>Start Date</th>
    <th>Expirty Date</th>
    <th>Upper Limit</th>
    <th>Referee Constraint</th>
  </tr>

<% @businesses.each do |business| %>
  <tr>
    <td><%=h business.name %></td>
    <td><%=h business.referal_program_name %></td>
    <td><%=h business.address %></td>
    <td><%=h business.description %></td>
    <td><%=h business.city %></td>
    <td><%=h business.state %></td>
    <td><%=h business.url %></td>
    <td><%=h business.referee_reward %></td>
    <td><%=h business.referer_reward %></td>
    <td><%=h business.start_date %></td>
    <td><%=h business.expiry_date %></td>
    <td><%=h business.upper_limit %></td>
    <td><%=h business.referee_constraint %></td>    
    <td><%= link_to 'Show', business %></td>
    <td><%= link_to 'Edit', edit_business_path(business) %></td>
    <td><%= link_to 'Destroy', business, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

