<h1>New business</h1>

<% form_for(@business) do |f| %>
  <%= f.error_messages %>
  <table>
    <tr>
      <td>
        * required
      </td>
    </tr>    
    <tr>
      <td>
        <p>
          <%= f.label :name %>*<br />
          <%= f.text_field :name %>
        </p>
      </td>
      <td>
        <p>
          <%= f.label :referal_program_name %><br />
          <%= f.text_field :referal_program_name %>
        </p>
      </td>
    </tr>
    <tr>
      <td>
        <p>
          <%= f.label :city %><br />
          <%= f.text_field :city %>
        </p>
      </td>
      <td>
        <p>
          <%= f.label :state %><br />
          <%= f.text_field :state %>
        </p>
      </td>
    </tr>
    <tr>
      <td>
        <p>
          <%= f.label :referee_reward %><br />
          <%= f.text_field :referee_reward %>
        </p>
      </td>
      <td>
        <p>
          <%= f.label :referer_reward %><br />
          <%= f.text_field :referer_reward %>
        </p>
      </td>
    </tr>
    <tr>
      <td>
        <p>
          <%= f.label :start_date %><br />
          <%= calendar_date_select :business, :start_date %>
        </p>
      </td>
      <td>
        <p>
          <%= f.label :expiry_date %><br />
          <%= calendar_date_select :business, :expiry_date %>
        </p>
      </td>
    </tr>
    <tr>
      <td colspan=2>
        <p>
          <%= f.label :url %><br />
          <%= f.text_field :url %>
        </p>
      </td>
    </tr>
    <tr>
      <td colspan=2>
        <p>
          <%= f.label :description %>* <br />
          <%= f.text_area :description %>
        </p>
      </td>
    </tr>    
    <tr>
      <td>
        <p>
          <%= f.submit 'add' %>
        </p>
      </td>
    </tr>
<% end %>