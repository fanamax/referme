<p><b>register new user</b></p>
<% form_for :user, :url => { :action => "create" } do |u| %>
  <%= u.error_messages %>
<p>
    <%= u.label :displayname %> <br />
    <%= u.text_field :displayname %>
  </p>
  
  <p>
    <%= u.label :email %> <br />
    <%= u.text_field :email %>
  </p>
  
  <p>
    <%= u.label :password %> <br />
    <%= u.password_field :password %>
  </p>  
  
  <p>
    <%= u.submit "register" %>
  </p>
  
<% end %>